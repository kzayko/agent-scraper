# Настройки подключения к GigaChat
GIGACHAT_USERNAME=your_gigachat_username
GIGACHAT_PASSWORD=your_gigachat_password
GIGACHAT_BASE_URL=https://gigachat.devices.sberbank.ru/api/v1
GIGACHAT_AUTH_URL=https://ngw.devices.sberbank.ru:9443/api/v2/oauth
GIGACHAT_SCOPE=GIGACHAT_API_PERS
GIGACHAT_VERIFY_SSL=False

# Настройки Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION_NAME=info_agent_embeddings

# Параметры обработки текста
MAX_CHUNK_SIZE=1000
CHUNK_OVERLAP=100
SIMILARITY_THRESHOLD=0.85

# Пути к файлам
SOURCES_EXCEL_PATH=sources.xlsx
LOG_FILE_PATH=agent_logs.txt

# Настройки логирования
LOG_LEVEL=INFO

# Настройки веб-интерфейса
WEB_HOST=0.0.0.0
WEB_PORT=5000
WEB_DEBUG=False
